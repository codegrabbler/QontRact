{% extends 'base.html.twig' %}

{% block content %}
    <!-- https://github.com/AntoineTesson/QRcodeBundle -->
    <div class="row">
        <div class="col-sm-12 col-lg-8 col-lg-offset-4">
            {{ barcode({code: 'QontRact', type: 'qrcode', format: 'html', width: 20, height: 20}) }}
        </div>
    </div>

{% endblock content %}

{% block javascripts %}
    <script type="text/javascript">
        new BugController({
            'imageSprite': '{{ asset('/images/fly-sprite.png') }}',
            'maxBugs': 10
        });
        new SpiderController({
            'imageSprite': '{{ asset('/images/spider-sprite.png') }}',
            'maxBugs': 2
        });

    </script>

{% endblock javascripts %}